	"scripts": {
		"build": "npm run build:css && remix build",
		"build:css": "tailwindcss -m -i ./styles/tailwind.css -o app/tailwind.css",
		"dev": "concurrently \"npm run dev:css\" \"remix dev\"",
		"dev:css": "tailwindcss -w -i ./styles/tailwind.css -o app/tailwind.css",
		"postinstall": "remix setup node && prisma generate",
		"start": "remix-serve build",
		"lint": "eslint ./app/**.{.ts,.tsx} --debug"
	},
	"dependencies": {
		"@home-dashboard/lib": "workspace:*",
		"@home-dashboard/ui": "workspace:*",
		"@prisma/client": "^3.9.2",
		"@reach/dialog": "^0.16.2",
		"@remix-run/react": "^1.2.1",
		"@remix-run/serve": "^1.2.1",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"remix": "^1.2.1"
	},
	"devDependencies": {
		"@remix-run/dev": "^1.2.1",
		"@remix-run/eslint-config": "^1.2.1",
		"@types/react": "^17.0.39",
		"@types/react-dom": "^17.0.11",
		"autoprefixer": "^10.4.2",
		"concurrently": "^7.0.0",
		"eslint": "^8.9.0",
		"postcss": "^8.4.6",
		"prisma": "^3.9.2",
		"tailwindcss": "^3.0.23",
		"typescript": "^4.5.5"
	},
	"engines": {
		"node": ">=14"
	},
	"sideEffects": false
